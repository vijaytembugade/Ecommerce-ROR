<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>All Products</h1>
<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
        <li>
          <%= image_tag(product.image_url) %>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            Rs.  <%= product.price %>
          </div>
        </li>
    <% end %>
  <% end %>
</ul>
