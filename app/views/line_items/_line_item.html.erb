<% if line_item == @current_item %>
<tr class="line-item-highlight">
<% else %>
<tr>
<% end %>
  <td class="quantity"><%= line_item.quantity %></td>
  <td><%= line_item.product.title %></td>
  <td class="price">Rs. <%= (line_item.total_price) %></td>
  <td class="price"><%= button_to 'remove', line_item,
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  <% if line_item.quantity > 0 %>
  <td class=""><%= button_to '+' , line_items_path(product_id: line_item.product.id) , remote: true%></td>
  <td class=""><%= button_to '-', line_item_path(line_item.id),remote: true,  :method=> :patch %></td>
  <% end %>
</tr>
